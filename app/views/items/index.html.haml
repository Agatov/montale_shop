- if @brand
  .wrapper
    = image_tag "#{@brand.index}.jpg"



#catalog{name: 'catalog'}
  .catalog-header
    Ароматы
    = @brand.name


  .wrapper
    .catalog-filter
      Выберите семейство ароматов:

      %ul.families
        %li
          - if params[:family_id]
            - class_value = ''
          - else
            - class_value = 'selected'
          = link_to 'Все', root_path(anchor: 'catalog'), class: class_value
        - Family.order(:id).each do |family|
          %li
            - if params[:family_id]
              - if params[:family_id] == family.id.to_s
                - class_value = 'selected'
              - else
                - class_value = ''
            - else
              - class_value = ''
            = link_to family.name, root_path(family_id: family.id, anchor: 'catalog'), class: class_value

    .items
      -  @items.each do |item|
        .item
          .image
            %a{href: "/montale/#{item.index}"}
              = image_tag item.image_url(:thumb)
          .info
            %a.name{href: "/montale/#{item.index}"}
              = item.original_name
            .sex
              Унисекс
